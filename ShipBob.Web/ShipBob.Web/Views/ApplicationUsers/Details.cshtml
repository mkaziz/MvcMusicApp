@model ShipBob.Models.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>ApplicationUser</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            Orders
        </dt>
        <dd>
            @if (Model.Orders.Any())
            {
                <table class="table">
                    <tr>
                        <th>Tracking Number</th>
                        <th>Street Address</th>
                        <th>See More</th>
                    </tr>
                    <tr>
                        @foreach (var order in Model.Orders)
                        {
                            <td>@order.TrackingNumber</td>
                            <td>@($"{order.StreetAddress}, {order.City} {order.State}, {order.Zip}")</td>
                            <td>@Html.ActionLink("See More", "Index", "Orders", new { id = order.ID }, new { })</td>
                        }
                    </tr>
                </table>
            }
            else
            {
                <span>No orders exist for this user</span>
            }
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
